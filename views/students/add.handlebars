        Password:<br>
        <input type="password" placeholder="password" class="form-control"><br>
    </div>
    <div class="form-group">

        Phone:<br>
        <input type="text" placeholder="+91" name="Phone"  class="form-control" value="{{list.Phone}}"><br>
    </div>
    <input type="submit" class="btn btn-success">
    {{!-- <a href="http://localhost:5000/students/" type="button" class="btn btn-primary">Home page</a> --}}
